<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="7dp" />
            <gradient
                android:angle="0"
                android:centerColor="#cef0e5"
                android:centerY="0.75"
                android:endColor="#cef0e5"
                android:startColor="#cef0e5" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="7dp" />

                <gradient
                    android:angle="0"
                    android:centerColor="#7fceb1"
                    android:centerY="0.75"
                    android:endColor="#7fceb1"
                    android:startColor="#7fceb1" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">

        <clip>
            <shape>
                <corners android:radius="7dp" />

                <gradient
                    android:angle="0"
                    android:endColor="#7fceb1"
                    android:startColor="#7fceb1" />
            </shape>
        </clip>
    </item>

</layer-list>