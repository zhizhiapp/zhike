<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bj">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x96"
            android:background="@drawable/intelligenttest_title_backg">


            <ImageView
                android:id="@+id/back_return"
                android:layout_width="@dimen/x40"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/x26"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/x26"
                android:src="@drawable/intelligenttest_return"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="找回密码"
                android:textStyle="bold"
                android:textColor="@color/homeText"
                android:textSize="@dimen/x35"/>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:layout_marginLeft="@dimen/x130"
            android:layout_marginRight="@dimen/x130"
            android:layout_marginTop="@dimen/x64"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x37"
                android:layout_height="@dimen/x37"
                android:layout_gravity="center"
                android:src="@drawable/login_zh"/>

            <EditText
                android:id="@+id/back_call"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x20"
                android:background="@color/touS"
                android:gravity="center_vertical"
                android:hint="手机号"
                android:textColor="@color/heiS"
                android:textColorHint="#cdcdcd"
                android:textSize="@dimen/x30"/>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x130"
            android:layout_marginRight="@dimen/x130"
            android:background="@color/homeText"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:layout_marginLeft="@dimen/x130"
            android:layout_marginRight="@dimen/x130"
            android:layout_marginTop="@dimen/x64"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x37"
                android:layout_height="@dimen/x37"
                android:layout_gravity="center"
                android:src="@drawable/login_mm"/>

            <EditText
                android:id="@+id/back_yzm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x20"
                android:layout_weight="1"
                android:background="@color/touS"
                android:gravity="center_vertical"
                android:hint="验证码"
                android:textColor="@color/heiS"
                android:textColorHint="#cdcdcd"
                android:textSize="@dimen/x30"/>


            <Button
                android:paddingLeft="@dimen/x5"
                android:paddingRight="@dimen/x5"
                android:id="@+id/back_get_yzm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/x6"
                android:background="@drawable/frame_garden_login"
                android:text="获取验证码"
                android:textColor="#ffffff"
                android:textSize="@dimen/x24"/>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x130"
            android:layout_marginRight="@dimen/x130"
            android:background="@color/homeText"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:layout_marginLeft="@dimen/x130"
            android:layout_marginRight="@dimen/x130"
            android:layout_marginTop="@dimen/x64"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x37"
                android:layout_height="@dimen/x37"
                android:layout_gravity="center"
                android:src="@drawable/back_mm"/>

            <EditText
                android:id="@+id/back_mm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x20"
                android:background="@color/touS"
                android:gravity="center_vertical"
                android:hint="请输入新密码"
                android:textColor="@color/heiS"
                android:textColorHint="#cdcdcd"
                android:textSize="@dimen/x30"/>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x130"
            android:layout_marginRight="@dimen/x130"
            android:background="@color/homeText"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:layout_marginLeft="@dimen/x130"
            android:layout_marginRight="@dimen/x130"
            android:layout_marginTop="@dimen/x64"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x37"
                android:layout_height="@dimen/x37"
                android:layout_gravity="center"
                android:src="@drawable/back_mm"/>

            <EditText
                android:id="@+id/back_xmm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x20"
                android:background="@color/touS"
                android:gravity="center_vertical"
                android:hint="请确定新密码"
                android:textColor="@color/heiS"
                android:textColorHint="#cdcdcd"
                android:textSize="@dimen/x30"/>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x130"
            android:layout_marginRight="@dimen/x130"
            android:background="@color/homeText"/>


        <Button
            android:id="@+id/back_determine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x54"
            android:layout_marginLeft="@dimen/x130"
            android:layout_marginRight="@dimen/x130"
            android:layout_marginTop="@dimen/x118"
            android:background="@drawable/frame_garden_login"
            android:text="确定找回"
            android:textColor="#ffffff"
            android:textSize="@dimen/x24"
            android:textStyle="bold"/>

    </LinearLayout>


    <ImageView
        android:layout_width="@dimen/x224"
        android:layout_height="@dimen/x22"/>


</RelativeLayout>

