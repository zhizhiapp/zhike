<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bj"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x96"
        android:background="@drawable/intelligenttest_title_backg">

        <ImageView
            android:id="@+id/exercises_return"
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/x26"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/x26"
            android:src="@drawable/intelligenttest_return"/>

        <TextView
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="习题"
            android:textColor="@color/homeText"
            android:textSize="@dimen/x35"/>


        <LinearLayout
            android:id="@+id/exercises_choice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x28"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/exercises_choice_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/x23"
                android:gravity="center_vertical"
                android:text="科目选择"
                android:textColor="@color/homeText"
                android:textSize="@dimen/x28"/>


            <ImageView
                android:id="@+id/exercises_choice_img"
                android:layout_width="@dimen/x20"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/microclass_more"/>
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/fl_chapter_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/fl_chapter_1"
                    android:layout_width="@dimen/x228"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/x16"
                    android:layout_marginLeft="@dimen/x84"
                    android:layout_marginRight="@dimen/x95"
                    android:layout_marginTop="@dimen/x16"
                    android:background="@drawable/examination_analysis_backg"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="章"
                        android:textColor="@color/huiS"
                        android:textSize="@dimen/x36"/>


                    <ImageView
                        android:layout_width="@dimen/x26"
                        android:layout_height="@dimen/x16"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/x9"
                        android:src="@drawable/microclass_more_jiantou"/>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/fl_chapter_2"
                    android:layout_width="@dimen/x228"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/x16"
                    android:layout_marginRight="@dimen/x83"
                    android:layout_marginTop="@dimen/x16"
                    android:background="@drawable/examination_analysis_backg"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="节"
                        android:textColor="@color/huiS"
                        android:textSize="@dimen/x36"/>


                    <ImageView
                        android:layout_width="@dimen/x26"
                        android:layout_height="@dimen/x16"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/x9"
                        android:src="@drawable/microclass_more_jiantou"/>


                </LinearLayout>
            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/exercises_section_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bj"
                android:overScrollMode="never"/>
        </LinearLayout>

        <Spinner
            android:id="@+id/snr_menu"
            android:layout_width="@dimen/x170"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/x25"
            android:background="@drawable/frame_just"/>


    </FrameLayout>


</LinearLayout>
