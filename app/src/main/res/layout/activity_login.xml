<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bj">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x96"
            android:background="@drawable/intelligenttest_title_backg">


            <ImageView
                android:id="@+id/login_return"
                android:layout_width="@dimen/x40"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/x26"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/x26"
                android:src="@drawable/intelligenttest_return" />

            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="登陆"
                android:textColor="@color/homeText"
                android:textSize="@dimen/x35" />


        </RelativeLayout>


        <ImageView
            android:layout_width="@dimen/x143"
            android:layout_height="@dimen/x127"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/x106"
            android:src="@drawable/login" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:layout_marginLeft="@dimen/x130"
            android:layout_marginRight="@dimen/x130"
            android:layout_marginTop="@dimen/x126"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x37"
                android:layout_height="@dimen/x37"
                android:layout_gravity="center"
                android:src="@drawable/login_zh" />

            <EditText
                android:id="@+id/login_call"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x20"
                android:background="@color/touS"
                android:gravity="center_vertical"
                android:hint="手机号"
                android:textColor="@color/heiS"
                android:textColorHint="#cdcdcd"
                android:textSize="@dimen/x30" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x130"
            android:layout_marginRight="@dimen/x130"
            android:background="@color/homeText" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:layout_marginLeft="@dimen/x130"
            android:layout_marginRight="@dimen/x130"
            android:layout_marginTop="@dimen/x44"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x37"
                android:layout_height="@dimen/x37"
                android:layout_gravity="center"
                android:src="@drawable/login_mm" />

            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x20"
                android:background="@color/touS"
                android:gravity="center_vertical"
                android:hint="密码"
                android:textColor="@color/heiS"
                android:textColorHint="#cdcdcd"
                android:textSize="@dimen/x30" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x130"
            android:layout_marginRight="@dimen/x130"
            android:background="@color/homeText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:layout_marginLeft="@dimen/x130"
            android:layout_marginRight="@dimen/x130"
            android:layout_marginTop="@dimen/x41"
            android:orientation="horizontal">

            <TextView
                android:clickable="true"
                android:id="@+id/login_forget"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/touS"
                android:gravity="center_vertical"
                android:text="忘记密码"
                android:textColor="#cecece"
                android:textSize="@dimen/x30" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:clickable="true"
                    android:id="@+id/login_sms"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/touS"
                    android:text="短信登陆"
                    android:textColor="#cecece"
                    android:textSize="@dimen/x30" />

                <TextView
                    android:layout_width="@dimen/x1"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/x10"
                    android:layout_marginLeft="@dimen/x9"
                    android:layout_marginTop="@dimen/x10"
                    android:background="#cecece" />


                <TextView
                    android:clickable="true"
                    android:id="@+id/login_register"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x9"
                    android:background="@color/touS"
                    android:text="立即注册"
                    android:textColor="#cecece"
                    android:textSize="@dimen/x30" />
            </LinearLayout>


        </LinearLayout>


        <Button
            android:id="@+id/login_land"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x54"
            android:layout_marginLeft="@dimen/x130"
            android:layout_marginRight="@dimen/x130"
            android:layout_marginTop="@dimen/x96"
            android:background="@drawable/frame_garden_login"
            android:text="登陆"
            android:textColor="#ffffff"
            android:textSize="@dimen/x24"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x48"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/x104"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/login_qq"
            android:layout_width="@dimen/x46"
            android:layout_height="@dimen/x48"
            android:layout_marginRight="@dimen/x83"
            android:src="@drawable/login_qq" />

        <ImageView
            android:id="@+id/login_wb"
            android:layout_width="@dimen/x57"
            android:layout_height="@dimen/x48"
            android:layout_marginRight="@dimen/x76"
            android:src="@drawable/login_wb" />

        <ImageView
            android:id="@+id/login_wx"
            android:layout_width="@dimen/x59"
            android:layout_height="@dimen/x48"
            android:src="@drawable/login_wx" />


    </LinearLayout>


</RelativeLayout>

