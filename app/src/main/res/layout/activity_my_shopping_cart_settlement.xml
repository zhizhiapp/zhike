<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bj"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x96"
        android:background="@drawable/intelligenttest_title_backg">


        <ImageView
            android:id="@+id/my_shopping_cart_settlement_return"
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/x26"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/x26"
            android:src="@drawable/intelligenttest_return" />

        <TextView
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="购物车"
            android:textColor="@color/homeText"
            android:textSize="@dimen/x35" />

    </RelativeLayout>


    <ScrollView
        android:id="@+id/my_shopping_cart_settlement_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x28"
                android:paddingRight="@dimen/x28">


                <ImageView
                    android:layout_width="@dimen/x5"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/x20"
                    android:paddingTop="@dimen/x16"
                    android:src="@drawable/home_microclass_verti" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/x20"
                    android:layout_marginLeft="@dimen/x6"
                    android:layout_marginTop="@dimen/x22"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="确认订单信息"
                    android:textColor="@color/heiS"
                    android:textSize="@dimen/x30" />

            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/my_shopping_cart_settlement_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/x28"
                android:paddingRight="@dimen/x28">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x22"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="@dimen/x5"
                        android:layout_height="match_parent"
                        android:paddingBottom="@dimen/x20"
                        android:paddingTop="@dimen/x16"
                        android:src="@drawable/home_microclass_verti" />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/x20"
                        android:layout_marginLeft="@dimen/x6"
                        android:layout_marginTop="@dimen/x22"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="选择优惠券"
                        android:textColor="@color/heiS"
                        android:textSize="@dimen/x30" />

                </LinearLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/my_shopping_cart_settlement_recycler_coupon"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x77"
                    android:overScrollMode="never" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x22"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x28"
                android:paddingRight="@dimen/x28">


                <ImageView
                    android:layout_width="@dimen/x5"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/x20"
                    android:paddingTop="@dimen/x16"
                    android:src="@drawable/home_microclass_verti" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/x20"
                    android:layout_marginLeft="@dimen/x6"
                    android:layout_marginTop="@dimen/x22"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="选择支付方式"
                    android:textColor="@color/heiS"
                    android:textSize="@dimen/x30" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x52"
                android:layout_marginTop="@dimen/x35"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/my_shopping_cart_settlement_wx"
                    android:layout_width="@dimen/x200"
                    android:layout_height="match_parent"
                    android:background="@drawable/my_shopping_cart_settlement_return_recycler_coupon_no"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/my_shopping_cart_settlement_wx_img"
                        android:layout_width="@dimen/x28"
                        android:layout_height="@dimen/x28"
                        android:layout_gravity="center"
                        android:src="@drawable/my_shopping_cart_settlement_return_recycler_coupon_wx_no" />

                    <TextView
                        android:id="@+id/my_shopping_cart_settlement_wx_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/x15"
                        android:gravity="center"
                        android:text="微信"
                        android:textColor="@color/Coupon"
                        android:textSize="@dimen/x24" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/my_shopping_cart_settlement_zfb"
                    android:layout_width="@dimen/x200"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x60"
                    android:background="@drawable/my_shopping_cart_settlement_return_recycler_coupon_no"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/my_shopping_cart_settlement_zfb_img"
                        android:layout_width="@dimen/x28"
                        android:layout_height="@dimen/x28"
                        android:layout_gravity="center"
                        android:src="@drawable/my_shopping_cart_settlement_return_recycler_coupon_zfb_no" />

                    <TextView
                        android:id="@+id/my_shopping_cart_settlement_zfb_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/x15"
                        android:gravity="center"
                        android:text="支付宝"
                        android:textColor="@color/Coupon"
                        android:textSize="@dimen/x24" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x46"
                android:gravity="right|center_vertical"
                android:orientation="vertical"
                android:paddingRight="@dimen/x28">

                <TextView
                    android:id="@+id/my_shopping_cart_settlement_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您购买了2个课程"
                    android:textColor="@color/heiS"
                    android:textSize="@dimen/x30" />

                <TextView
                    android:id="@+id/my_shopping_cart_settlement_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x19"
                    android:text="商品金额:￥0"
                    android:textColor="@color/heiS"
                    android:textSize="@dimen/x30" />

                <TextView
                    android:id="@+id/my_shopping_cart_settlement_money_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x19"
                    android:text="已优惠金额:￥0"
                    android:textColor="@color/heiS"
                    android:textSize="@dimen/x30" />

                <TextView
                    android:id="@+id/my_shopping_cart_settlement_money_actual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x19"
                    android:text="实付金额:￥0"
                    android:textColor="@color/heiS"
                    android:textSize="@dimen/x30" />

                <Button
                    android:layout_marginBottom="@dimen/x100"
                    android:id="@+id/my_shopping_cart_settlement_submit"
                    android:layout_width="@dimen/x215"
                    android:layout_height="@dimen/x96"
                    android:layout_marginTop="@dimen/x68"
                    android:background="@color/hongS"
                    android:text="提交订单"
                    android:textColor="@color/baiS" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
