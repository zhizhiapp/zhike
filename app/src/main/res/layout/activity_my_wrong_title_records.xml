<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bj"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x96"
        android:background="@drawable/intelligenttest_title_backg">


        <ImageView
            android:id="@+id/my_wrong_title_records_return"
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/x26"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/x26"
            android:src="@drawable/intelligenttest_return"/>

        <TextView
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="我的错题"
            android:textColor="@color/homeText"
            android:textSize="@dimen/x35"/>


        <LinearLayout
            android:id="@+id/my_wrong_title_records_choice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x28"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/my_wrong_title_records_choice_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/x23"
                android:gravity="center_vertical"
                android:text="科目选择"
                android:textColor="@color/homeText"
                android:textSize="@dimen/x28"/>


            <ImageView
                android:id="@+id/my_wrong_title_records_choice_img"
                android:layout_width="@dimen/x20"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/microclass_more"/>
        </LinearLayout>
    </RelativeLayout>


    <ScrollView
        android:id="@+id/my_wrong_title_records_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/baiS"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x190"
                    android:layout_marginTop="@dimen/x28">


                    <ImageView
                        android:layout_width="@dimen/x190"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:src="@drawable/my_wrong_title_records_logo"/>


                    <LinearLayout
                        android:layout_width="@dimen/x192"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="全部错题"
                            android:textColor="@color/heiS"
                            android:textSize="@dimen/x24"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/my_wrong_title_records_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="bottom"
                                android:text="10"
                                android:textColor="@color/homeText"
                                android:textSize="@dimen/x48"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/x12"
                                android:gravity="center"
                                android:text="道"
                                android:textColor="@color/heiS"
                                android:textSize="@dimen/x24"/>


                        </LinearLayout>

                    </LinearLayout>


                </RelativeLayout>


                <TextView
                    android:id="@+id/my_wrong_title_records_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x39"
                    android:layout_marginTop="@dimen/x28"
                    android:gravity="center"
                    android:text="单选题一片掺淡"
                    android:textColor="@color/homeText"
                    android:textSize="@dimen/x24"/>


            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x15"
                app:cardBackgroundColor="@color/baiS">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/my_wrong_title_records_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/my_wrong_title_records_exercises"
                android:layout_width="@dimen/x215"
                android:layout_height="@dimen/x63"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/x76"
                android:background="@drawable/examination_analysis_backg"
                android:clickable="true"
                android:gravity="center"
                android:text="习题"
                android:textColor="@color/homeText"
                android:textSize="@dimen/x40"
                android:visibility="gone"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
