<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bj"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x96"
        android:background="@drawable/intelligenttest_title_backg">


        <ImageView
            android:id="@+id/register_return"
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/x26"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/x26"
            android:src="@drawable/intelligenttest_return"/>

        <TextView
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/homeText"
            android:textSize="@dimen/x35"/>


    </RelativeLayout>


    <ImageView
        android:layout_width="@dimen/x143"
        android:layout_height="@dimen/x127"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/x106"
        android:src="@drawable/login"/>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:layout_marginTop="@dimen/x126"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x130"
        android:paddingRight="@dimen/x130">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="+86"
            android:textColor="#cdcdcd"
            android:textSize="@dimen/x30"/>


        <TextView
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:background="@color/homeText"/>


        <EditText
            android:id="@+id/register_call"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x20"
            android:background="@color/touS"
            android:gravity="center_vertical"
            android:hint="手机号"
            android:textColor="@color/heiS"
            android:textColorHint="#cdcdcd"
            android:textSize="@dimen/x30"/>


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x130"
        android:layout_marginRight="@dimen/x130"
        android:background="@color/homeText"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:layout_marginTop="@dimen/x44"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x130"
        android:paddingRight="@dimen/x130">


        <EditText
            android:id="@+id/register_yzm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/touS"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:textColor="@color/heiS"
            android:textColorHint="#cdcdcd"
            android:textSize="@dimen/x30"/>

        <Button
            android:id="@+id/register_getyzm"
            android:layout_width="wrap_content"
            android:paddingLeft="@dimen/x5"
            android:paddingRight="@dimen/x5"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/x6"
            android:background="@drawable/frame_garden_login"
            android:text="获取验证码"
            android:textColor="#ffffff"
            android:textSize="@dimen/x24"/>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x130"
        android:layout_marginRight="@dimen/x130"
        android:background="@color/homeText"/>

    <EditText
        android:id="@+id/register_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:layout_marginLeft="@dimen/x130"
        android:layout_marginRight="@dimen/x130"
        android:layout_marginTop="@dimen/x44"
        android:background="@color/touS"
        android:gravity="center_vertical"
        android:hint="请输入密码"
        android:textColor="@color/heiS"
        android:textColorHint="#cdcdcd"
        android:textSize="@dimen/x30"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x130"
        android:layout_marginRight="@dimen/x130"
        android:background="@color/homeText"/>


    <EditText
        android:id="@+id/register_ok_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:layout_marginTop="@dimen/x44"
        android:background="@color/touS"
        android:gravity="center_vertical"
        android:hint="请确认密码"
        android:paddingLeft="@dimen/x130"
        android:paddingRight="@dimen/x130"
        android:textColor="@color/heiS"
        android:textColorHint="#cdcdcd"
        android:textSize="@dimen/x30"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x130"
        android:layout_marginRight="@dimen/x130"
        android:background="@color/homeText"/>


    <Button
        android:id="@+id/register_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x54"
        android:layout_marginLeft="@dimen/x130"
        android:layout_marginRight="@dimen/x130"
        android:layout_marginTop="@dimen/x96"
        android:background="@drawable/frame_garden_login"
        android:text="完成"
        android:textColor="#ffffff"
        android:textSize="@dimen/x24"
        android:textStyle="bold"/>

</LinearLayout>


