<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bj"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x96"
        android:background="@drawable/intelligenttest_title_backg">


        <ImageView
            android:id="@+id/scheme_analysis_return"
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/x26"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/x26"
            android:src="@drawable/intelligenttest_return"/>

        <TextView
            android:textStyle="bold"
            android:id="@+id/scheme_analysis_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="智能分析"
            android:textColor="@color/homeText"
            android:textSize="@dimen/x35"/>


        <LinearLayout
            android:id="@+id/scheme_analysis_choice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x28"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/scheme_analysis_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/x23"
                android:gravity="center_vertical"
                android:text="科目选择"
                android:textColor="@color/homeText"
                android:textSize="@dimen/x28"/>


            <ImageView
                android:id="@+id/scheme_analysis_img"
                android:layout_width="@dimen/x20"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/microclass_more"/>


        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x70"
        android:orientation="horizontal">


        <Button
            android:id="@+id/scheme_analysis_analysis"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/zhS"
            android:text="智能分析"
            android:textColor="@color/heiS"
            android:textSize="@dimen/x30"/>

        <Button
            android:id="@+id/scheme_analysis_programme"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/zhS"
            android:text="智慧方案"
            android:textColor="@color/heiS"
            android:textSize="@dimen/x30"/>


    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/scheme_analysis_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"/>

</LinearLayout>