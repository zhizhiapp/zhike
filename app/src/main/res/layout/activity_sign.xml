<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bj"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x96"
        android:background="@drawable/intelligenttest_title_backg">


        <ImageView
            android:id="@+id/sign_return"
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/x26"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/x26"
            android:src="@drawable/intelligenttest_return"/>

        <TextView
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="签到"
            android:textColor="@color/homeText"
            android:textSize="@dimen/x35"/>


    </RelativeLayout>


    <ScrollView
        android:id="@+id/sign_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/sign_sign"
                android:layout_width="@dimen/x192"
                android:layout_height="@dimen/x192"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/x37"
                android:src="@drawable/sign_logo"/>


            <TextView
                android:id="@+id/sign_share"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x80"
                android:layout_marginTop="@dimen/x13"
                android:background="@color/baiS"
                android:clickable="true"
                android:gravity="center"
                android:text="分享"
                android:textColor="@color/homeText"
                android:textSize="@dimen/x30"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x80"
                android:layout_marginTop="@dimen/x20"
                android:background="@color/baiS"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x100"
                android:paddingRight="@dimen/x100">

                <TextView
                    android:id="@+id/sign_day"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="第一天"
                    android:textColor="@color/homeText"
                    android:textSize="@dimen/x30"/>


                <TextView
                    android:id="@+id/sign_integral"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:text="当前积分：0"
                    android:textColor="@color/homeText"
                    android:textSize="@dimen/x30"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x80"
                android:layout_marginTop="@dimen/x20"
                android:background="@color/baiS"
                android:orientation="horizontal"
                >


                <LinearLayout
                    android:id="@+id/sign_rise"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/baiS"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/x57">

                    <ImageView

                        android:layout_width="@dimen/x54"
                        android:layout_height="@dimen/x62"
                        android:layout_gravity="center"
                        android:src="@drawable/sign_rise"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/x65"
                        android:gravity="center_vertical"
                        android:text="赚积分"
                        android:textColor="@color/homeText"
                        android:textSize="@dimen/x30"/>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/sign_drop"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/sign"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/x57"
                    android:paddingRight="@dimen/x57">

                    <ImageView

                        android:layout_width="@dimen/x54"
                        android:layout_height="@dimen/x62"
                        android:layout_gravity="center"
                        android:src="@drawable/sign_drop"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/x65"
                        android:gravity="center_vertical"
                        android:text="花积分"
                        android:textColor="@color/homeText"
                        android:textSize="@dimen/x30"/>


                </LinearLayout>


            </LinearLayout>


            <android.support.v4.view.ViewPager
                android:id="@+id/sign_pager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1180"
                android:overScrollMode="never"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
