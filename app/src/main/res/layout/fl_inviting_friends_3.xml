<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/x20"
    android:paddingRight="@dimen/x20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f2f2"
        android:orientation="vertical">


        <ImageView
            android:layout_width="@dimen/x102"
            android:layout_height="@dimen/x112"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/x112"
            android:src="@drawable/ic_no_friends" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x50"
            android:layout_marginRight="@dimen/x50"
            android:layout_marginTop="@dimen/x55"
            android:gravity="center"
            android:maxLines="2"
            android:text="@string/inviting_friends_1_1"
            android:textColor="#aaaaaa"
            android:textSize="@dimen/x30" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginRight="@dimen/x40"
            android:layout_marginTop="@dimen/x35"
            android:maxLines="1"
            android:text="@string/inviting_friends_1_2"
            android:textColor="#aaaaaa"
            android:textSize="@dimen/x24" />
    </LinearLayout>
</FrameLayout>