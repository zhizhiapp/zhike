<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/x15">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x96"
        android:background="@color/baiS"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x28"
        android:paddingRight="@dimen/x28">


        <TextView
            android:id="@+id/item_recycler_exercise_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:lineSpacingExtra="@dimen/x8"
            android:text=""
            android:textColor="@color/heiS"
            android:textSize="@dimen/x30"/>


        <ImageView
            android:layout_width="@dimen/x16"
            android:layout_height="@dimen/x26"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/microclass_more"/>
    </LinearLayout>


</LinearLayout>
