<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_recycler_intelligent_analysis_title"
            android:layout_width="@dimen/x90"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="第11章"
            android:textColor="@color/homeText"
            android:textSize="@dimen/x26"/>


        <me.zhouzhuo.zzhorizontalprogressbar.ZzHorizontalProgressBar
            android:id="@+id/item_recycler_intelligent_analysis_progress"
            android:layout_width="0dp"
            android:layout_height="@dimen/x17"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:zpb_bg_color="@color/jd_bg"
            app:zpb_pb_color="@color/jdS"/>


        <TextView
            android:id="@+id/item_recycler_intelligent_analysis_bfb"
            android:layout_width="@dimen/x70"
            android:gravity="right|center_vertical"
            android:textColor="@color/homeText"
            android:textSize="@dimen/x26"
            android:layout_height="match_parent"
            android:text="100%"/>




    </LinearLayout>

</LinearLayout>
