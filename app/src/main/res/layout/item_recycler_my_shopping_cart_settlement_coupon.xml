<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/coupon_layout_bj"
        android:layout_width="@dimen/x324"
        android:layout_height="@dimen/x77"
        android:background="@drawable/coupon_ljsy"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/coupon_money"
                    android:layout_width="@dimen/x88"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:gravity="center_vertical"
                    android:text="￥2000"
                    android:textColor="@color/baiS"
                    android:textSize="@dimen/x25" />

                <TextView
                    android:id="@+id/coupon_money_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x14"
                    android:gravity="center_vertical"
                    android:text="满3999元使用"
                    android:textColor="@color/baiS"
                    android:textSize="@dimen/x20" />
            </LinearLayout>


            <TextView
                android:id="@+id/coupon_money_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="2017-8-8-2018-9-10"
                android:textColor="@color/baiS"
                android:textSize="@dimen/x15" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
