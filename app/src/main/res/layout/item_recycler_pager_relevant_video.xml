<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baiS"
    android:orientation="vertical">


    <LinearLayout
        android:layout_marginTop="@dimen/x8"
        android:layout_marginBottom="@dimen/x8"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x38"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/x22"
            android:layout_height="@dimen/x18"
            android:layout_gravity="center"
            android:src="@drawable/item_recycler_pager_relevant_video_play" />

        <TextView
            android:id="@+id/item_recycler_pager_relevant_video_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x12"
            android:gravity="center_vertical"
            android:text="证书"
            android:textColor="@color/heiS"
            android:textSize="@dimen/x28" />


    </LinearLayout>


</LinearLayout>
