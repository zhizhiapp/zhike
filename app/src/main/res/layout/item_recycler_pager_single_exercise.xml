<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baiS"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x28"
        android:paddingRight="@dimen/x28">


        <TextView
            android:id="@+id/item_recycler_pager_single_exercise_nun"
            android:layout_width="@dimen/x47"
            android:layout_height="@dimen/x46"
            android:background="@drawable/intelligenttest_yes_problem"
            android:gravity="center"
            android:text="A"
            android:textColor="@color/homeText"
            android:textSize="@dimen/x26" />


        <TextView
            android:id="@+id/item_recycler_pager_single_exercise_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x22"
            android:gravity="center_vertical"
            android:text="我好帅"
            android:textColor="@color/heiS"
            android:textSize="@dimen/x26" />


    </LinearLayout>


</LinearLayout>
