<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/baiS">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x180"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x28"
        android:paddingRight="@dimen/x29">


        <com.example.administrator.zhike.view.CircleImageView
            android:id="@+id/item_recycler_ranking_header"
            android:layout_width="@dimen/x151"
            android:layout_height="@dimen/x151"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/x15"
            android:layout_marginTop="@dimen/x15"
            android:src="@drawable/icon_error"
            app:border_color="@color/touS"
            app:border_width="@dimen/x2"
            />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x15"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                android:id="@+id/item_recycler_ranking_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x16"
                android:text="老王"
                android:textColor="@color/pm"
                android:textSize="@dimen/x30"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="掌握率"
                    android:textColor="@color/pm"
                    android:textSize="@dimen/x30"/>

                <TextView
                    android:id="@+id/item_recycler_ranking_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x8"
                    android:gravity="center_vertical"
                    android:text="0.81%"
                    android:textColor="@color/homeText"
                    android:textSize="@dimen/x36"/>
            </LinearLayout>
        </LinearLayout>


        <com.example.administrator.zhike.view.CircleImageView
            android:id="@+id/item_recycler_ranking_ranking"
            android:layout_width="@dimen/x112"
            android:layout_height="@dimen/x112"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/x34"
            android:layout_marginTop="@dimen/x34"
            android:src="@drawable/icon_error"
            android:visibility="gone"
            app:border_color="@color/touS"
            app:border_width="@dimen/x2"/>


    </LinearLayout>
</LinearLayout>
