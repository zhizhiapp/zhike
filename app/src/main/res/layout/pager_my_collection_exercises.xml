<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/pager_my_collection_exercises_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="@dimen/x128"
            android:layout_height="@dimen/x94"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/x117"
            android:src="@drawable/my_collection_no_exercises"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x25"
            android:gravity="center"
            android:text="暂无收藏"
            android:textColor="@color/collection"
            android:textSize="@dimen/x30"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x28"
            android:gravity="center"
            android:text="快去习题页面学习吧!"
            android:textColor="@color/collection"
            android:textSize="@dimen/x30"/>


        <TextView
            android:id="@+id/pager_my_collection_text_exercises"
            android:layout_width="@dimen/x215"
            android:layout_height="@dimen/x63"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/x95"
            android:background="@drawable/examination_analysis_backg"
            android:clickable="true"
            android:gravity="center"
            android:text="习题"
            android:textColor="@color/homeText"
            android:textSize="@dimen/x40"/>


    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/pager_my_collection_exercises"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
