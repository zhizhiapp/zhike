<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bj"
              android:orientation="vertical">


    <ImageView
        android:layout_width="@dimen/x90"
        android:layout_height="@dimen/x90"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/x84"
        android:src="@drawable/sign_yhj"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x20"
        android:gravity="center"
        android:text="积分抵消消费金额"
        android:textColor="#010101"
        android:textSize="@dimen/x24"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x20"
        android:gravity="center"
        android:text="3积分可抵消1元消费金额（人民币）"
        android:textColor="#6e6e6e"
        android:textSize="@dimen/x20"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x110"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x132"
            android:layout_weight="1"
            android:src="@drawable/wisdom_scheme_zuo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x16"
            android:layout_marginRight="@dimen/x16"
            android:text="猜你喜欢"
            android:textColor="@color/homeText"
            android:textSize="@dimen/x24"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/x132"
            android:layout_weight="1"
            android:src="@drawable/wisdom_scheme_you"/>


    </LinearLayout>


    <Button
        android:id="@+id/pager_sign_drop_love"
        android:layout_width="@dimen/x95"
        android:layout_height="@dimen/x41"
        android:layout_gravity="right"
        android:layout_marginBottom="@dimen/x18"
        android:layout_marginRight="@dimen/x28"
        android:layout_marginTop="@dimen/x38"
        android:background="@drawable/wisdom_scheme_hyz"
        android:text="换一组"
        android:textColor="@color/homeText"
        android:textSize="@dimen/x24"/>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x15"
        app:cardBackgroundColor="@color/baiS">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/pager_sign_drop_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:paddingLeft="@dimen/x28"
                android:paddingRight="@dimen/x28"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
